<div class="container">

  <h1 class="text-center">Liste des cocktails</h1>

  <ul class="list-group">
    <% @cocktails.each do |cocktail| %>
      <li class="list-group-item">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </li>
    <% end %>
  </ul>

  <%= link_to "Create a new cocktail", new_cocktail_path %>

</div>
